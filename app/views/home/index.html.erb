<div class="page-header">
  <h1>Padaria e Confeitaria</h1>
  <%= link_to new_purchase_path, class: 'btn btn-success' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Purchase
  <% end %>
  <%= link_to new_sale_path, class: 'btn btn-info' do %>
    <span class="glyphicon glyphicon-shopping-cart"></span>
    New Sale
  <% end %>
</div>
<br>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <%
          vermelho = "color:#ff6666"
          verde = "color:#00b33c"
        %>
        <th style="<%= vermelho %>">Purchases Amount</th>
        <th style="<%= vermelho %>">Purchases Value</th>
        <th>Sales Amount</th>
        <th>Sales Value</th>
        <th style="<%= verde %>">Total Profit</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <th style="<%= vermelho %>"><%= @profit["total_purchases"] %></th>
        <th style="<%= vermelho %>">R$ <%= @profit["purchases"] %></th>
        <th><%= @profit["total_sales"] %></th>
        <th>R$ <%= @profit["sales"] %></th>
        <th style="<%= verde %>">R$ <%= @profit["profit"] %></th>
      </tr>
    </tbody>
</div>
